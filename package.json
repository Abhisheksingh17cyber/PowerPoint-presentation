{
  "name": "ai-powerpoint-generator",
  "version": "2.0.0",
  "description": "Professional AI-Powered PowerPoint Generator - Create stunning presentations with comprehensive content, real images, and interactive charts in seconds",
  "main": "index.html",
  "scripts": {
    "start": "npx serve . -p 3000",
    "dev": "npx live-server --port=3000 --open=/",
    "build": "npm run optimize",
    "optimize": "npm run minify:css && npm run minify:js",
    "minify:css": "cleancss -o css/styles.min.css css/styles.css css/themes.css css/responsive.css",
    "minify:js": "terser js/app.js js/content-generator.js js/slide-builder.js js/template-manager.js js/export-handler.js -o js/app.min.js --compress --mangle",
    "deploy": "npm run build && npm run commit-deploy",
    "commit-deploy": "git add . && git commit -m 'Deploy updated AI PowerPoint Generator' && git push origin main",
    "test": "echo 'AI PowerPoint Generator ready for testing'",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Abhisheksingh17cyber/PowerPoint-presentation.git"
  },
  "keywords": [
    "powerpoint",
    "presentation",
    "generator",
    "ai",
    "slides",
    "pwa",
    "web-app",
    "javascript",
    "html5",
    "css3"
  ],
  "author": {
    "name": "Abhishek Singh",
    "email": "abhisheksingh17cyber@gmail.com",
    "url": "https://github.com/Abhisheksingh17cyber"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Abhisheksingh17cyber/PowerPoint-presentation/issues"
  },
  "homepage": "https://abhisheksingh17cyber.github.io/PowerPoint-presentation",
  "devDependencies": {
    "html-minifier-terser": "^7.2.0",
    "clean-css-cli": "^5.6.3",
    "terser": "^5.24.0",
    "html-validate": "^8.7.3",
    "stylelint": "^15.11.0",
    "eslint": "^8.55.0",
    "lighthouse": "^11.4.0",
    "live-server": "^1.2.2",
    "serve": "^14.2.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "files": [
    "index.html",
    "css/",
    "js/",
    "assets/",
    "manifest.json",
    "sw.js",
    "_config.yml"
  ]
}
